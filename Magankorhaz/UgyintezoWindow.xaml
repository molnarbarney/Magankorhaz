        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UgyintezoWindow" Height="700" Width="1350" ResizeMode="NoResize" Closing="ugyintezoWindow_Closing">
    <Grid>
        <!-- Felső sor -->
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="1344" StrokeThickness="0"/>
        <Label x:Name="felhasznalo" Content="Ügyintéző Tesztelő" HorizontalAlignment="Left" Margin="27,26,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label x:Name="felhasznaloTipus" Content="Ügyintéző" HorizontalAlignment="Left" Margin="27,63,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="kijelentkezesButton" Content="Kijelentkezés" HorizontalAlignment="Left" Margin="1199,22,0,0" VerticalAlignment="Top" Width="117" Height="52" Click="kijelentkezesButton_Click" FontSize="16"/>

        <!-- Menü bal oldalon -->
        <Button x:Name="attekintesMenuGomb" Content="Áttekintés" HorizontalAlignment="Left" Margin="27,124,0,0" VerticalAlignment="Top" Width="156" Height="45" Click="attekintesMenuGomb_Click"/>
        <Button x:Name="szamlakMenuGomb" Content="Számlakezelés" HorizontalAlignment="Left" Margin="27,265,0,0" VerticalAlignment="Top" Width="156" Height="46" Click="szamlakMenuGomb_Click"/>
        <Button x:Name="ujPaciensMenuGomb" Content="Új páciens felvétele" HorizontalAlignment="Left" Margin="27,194,0,0" VerticalAlignment="Top" Width="156" Height="46" Click="ujPaciensMenuGomb_Click"/>

