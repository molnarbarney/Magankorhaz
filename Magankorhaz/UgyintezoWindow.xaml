        <Grid x:Name="paciensMegtekinteseGrid" HorizontalAlignment="Left" Height="519" Margin="239,124,0,0" VerticalAlignment="Top" Width="1076" Visibility="Hidden">
        </Grid>

        <!-- TODO -->
        <!-- Kitti -->
        <Grid x:Name="szamlakezelesGrid" HorizontalAlignment="Left" Height="519" Margin="239,124,0,0" VerticalAlignment="Top" Width="1076" Visibility="Hidden">
        </Grid>
    </Grid>
</Window>
